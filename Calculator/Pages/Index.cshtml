@page
@model IndexModel
@{
    ViewData["Title"] = "Calculator";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Calculator</h1>

    <div class="calculator-container">
        <form method="post" id="calculatorForm">
            <div class="calculator">
                <div class="calculator-display">
                    <input type="text" asp-for="Input" class="form-control calculator-screen" readonly value="@Model.Input" />
                    <div class="result">@Model.Result</div>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
                    }
                </div>
                <div class="calculator-keys">
                    <!-- Top row with functions -->
                    <div class="row">
                        <button type="button" class="btn btn-danger all-clear" value="clear">AC</button>
                        <button type="button" class="btn btn-secondary operator" value="+/-">+/-</button>
                        <button type="button" class="btn btn-secondary operator" value="%">%</button>
                        <button type="button" class="btn btn-secondary operator" value="/">÷</button>
                    </div>
                    <!-- Numbers and operators -->
                    <div class="row">
                        <button type="button" class="btn btn-light number" value="7">7</button>
                        <button type="button" class="btn btn-light number" value="8">8</button>
                        <button type="button" class="btn btn-light number" value="9">9</button>
                        <button type="button" class="btn btn-secondary operator" value="*">×</button>
                    </div>
                    <div class="row">
                        <button type="button" class="btn btn-light number" value="4">4</button>
                        <button type="button" class="btn btn-light number" value="5">5</button>
                        <button type="button" class="btn btn-light number" value="6">6</button>
                        <button type="button" class="btn btn-secondary operator" value="-">-</button>
                    </div>
                    <div class="row">
                        <button type="button" class="btn btn-light number" value="1">1</button>
                        <button type="button" class="btn btn-light number" value="2">2</button>
                        <button type="button" class="btn btn-light number" value="3">3</button>
                        <button type="button" class="btn btn-secondary operator" value="+">+</button>
                    </div>
                    <!-- Bottom row with zero, decimal, and equals -->
                    <div class="row">
                        <button type="button" class="btn btn-light number" value="0">0</button>
                        <button type="button" class="btn btn-light decimal" value=".">.</button>
                        <button type="button" class="btn btn-success equal-sign" value="=">=</button>
                    </div>
                </div>
            </div>
            <input type="hidden" id="hiddenInput" name="Input" value="@Model.Input" />
            <button type="submit" id="submitButton" style="display: none;">Calculate</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}
